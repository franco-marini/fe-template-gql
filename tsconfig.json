{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@theme": [
        "src/theme"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@queries/*": [
        "src/graphql/queries/*"
      ],
      "@mutations/*": [
        "src/graphql/mutations/*"
      ],
    },
  },
  "include": [
    "src"
  ]
}
